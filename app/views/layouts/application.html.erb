          </a>
        </div>
        <div id="menu">
          <%= render :partial => 'shared/menu' %>
        </div>
        <div id="special_display">
          <%= link_to_remote "<span style=\"font-weight: bold; color: #3a7a15;\">Special Message</span>", :update => 'special_message', :url => {:controller => 'users', :action => 'special_message'}, :class => 'bigger_button' %>
        </div>
        <div id="login_display">
          <%= render :partial => 'shared/header_link_nav' %>
        </div>
      </div>

      <%# commenting partial out until I incorporate it into the template better %>
      <%#= render :partial => 'shared/flashes' %>

      <%= yield %>

    </div>
    <div id="footer">
      <div id="content">

        <div class="footer_box">
