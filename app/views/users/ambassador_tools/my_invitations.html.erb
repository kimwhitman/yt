<%= render :partial => 'shared/flashes' %>

<% title 'Your Profile' %>
<div id="main">
  <div id="page_container">
    <div id="page_information">
      <%= breadcrumb("My Account") %>
      <div class="arial18_green" id="main_title">My Profile: Ambassador Tools</div>
    </div>
  </div>

  <div id="main_content">
    <div class="flash" style="text-align: center;"><%= flash[:user_notice]%></div>
    <div id="container_4col" style="float:left;">
      <div id="ambassador_tools">

        <%= render :partial => 'users/ambassador_tools/navigation' %>

        <div class="tools_container">
          <h2 class="header">Keep track of your invitations</h2>

          <div class="track_invitations">
            <h3>E-mail Invitations (<%= current_user.invitations_count %>) <%= link_to 'Send an invitation', ambassador_tools_invite_by_email_user_path(current_user) %></h3>
            <div class="table">
              <% if current_user.invitations_count > 0 -%>
              <ul>
                <% @ambassador_invites.each do |ambassador_invite| %>
                  <li><span class="name"><%= ambassador_invite.recipients %></span> <span class="date"><%= ambassador_invite.created_at.strftime('%b %d, %Y') %></span></li>
                <% end %>
              </ul>
              <% else %>
              <h4>You currently have sent no invitations.</h4>
              <p>To earn free Yoga Today, start by inviting your friends and family to subscribe.</p>
              <%= link_to 'Invite by Email', ambassador_tools_invite_by_email_user_path(current_user), :class => 'by_email' %>
              <%= link_to 'Invite by Sharing', ambassador_tools_invite_by_sharing_user_path(current_user) %>
              <% end -%>
            </div>
          </div>
        </div>

      </div>
    </div>
    <div id="container_2col" style="float:right">
      <%= render :partial => 'profile_sidebar' %>
      <%= render :partial => 'users/shared/ambassador_profile_widget' %>
    </div>
  </div>
</div>