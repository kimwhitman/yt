<%= error_messages_for :user, :id => "warning",
      :header_message => "There were problems with your registration."
%>

<h3>Free Membership</h3>

<p style="margin-bottom: 15px">
  <%= radio_button_tag 'membership', 'free' %>
  <label for="membership_free">Free (Sign Up and enjoy Yoga Today's free weekly classes)</label>
</p>

<h3>Unlimited Membership Options</h3>

<p>All memberships: recurring billing, cancel anytime</p>

<p style="margin-bottom: 15px">
  <%= radio_button_tag 'membership', 'monthly', true %>
  <label for="membership_monthly">Subscription ($9.99/month)</label>
  <br />
  <%= radio_button_tag 'membership', 'prepaid' %>
  <label for="membership_prepaid">Yoga Today 365 ($89.95/year) - Saves you 25%</label>
  <br />
</p>

<p>
    <%= f.text_field :name  %>
    <%= f.label :name, 'Your name' %>
</p>

<p>
    <%= f.password_field :password %>
    <%= f.label :password, 'Your Password' %>
</p>

<p style="margin-bottom: 20px">
    <%= f.password_field :password_confirmation %>
    <%= f.label :password_confirmation, 'Your Password Again' %>
</p>

<p>
  <%= f.text_field :email, :class => 'form_field'  %>
  <%= f.label :email, 'Your Email' %>
</p>

<p style="margin-bottom: 10px">
  <%= f.text_field :email_confirmation, :class => 'form_field'  %>
  <%= f.label :email_confirmation, 'Your Email Again' %>
</p>

<p>
  <%= show_simple_captcha(:image_style => 'simply_black', :size => 30) %>
</p>

<p>
  <%= f.check_box :wants_newsletter %>
  <%= f.label :wants_newsletter, 'Send me the weekly Yoga Today newsletter and weekly class update.' %>
</p>

<p style="margin-bottom: 10px">
  <%= f.check_box :wants_promos %>
  <%= f.label :wants_promos, 'Keep me informed of Yoga Today offers and special announcements.' %>
</p>

<p style="margin-bottom: 25px">
  <%= f.radio_button :newsletter_format, 'html' %>
  <%= f.label :newsletter_format_html, 'HTML E-mail' %>
  <%= f.radio_button :newsletter_format, 'plain' %>
  <%= f.label :newsletter_format_plain, 'Plain Text E-mail' %>
</p>

<hr size="3" noshade />

<%= button_to_function 'Cancel', "history.back(); $(this).parents('form').find('.form_row input').val('');", :class => 'button_cancel'  %>
<%= submit_tag 'Sign Up', :class => 'button_confirm' %>

<hr size="1" noshade />