  <% if @ambassador_user %>
    <div class="ambassador_assigned">
      <h5>Your Ambassador</h5>
      <div class="ambassador_agent_id">
        <span><%= @ambassador_user.ambassador_name %></span>
      </div>
      <%= hidden_field_tag :ambassador_user_id, @ambassador_user.id %>
      <%= link_to 'Not your ambassador?', change_ambassador_users_path(:return_to => 'login'), :class => 'change_ambassador', :method => :post %>
      <p class="checkbox"><%= check_box_tag :notify_ambassador %>Notify this Ambassador by e-mail when I subscribe.</p>
    </div>
  <% else %>
    <div class="ambassador_unassigned">
      <p>To credit an Ambassador and begin your 2 week free trial, please enter a valid Ambassador ID:</p>
      <% form_tag select_ambassador_users_path do %>
        <%= text_field_tag :ambassador_name, '', :id => 'x_ambassador_name', :class => 'input' %>
        <%= link_to_function 'Enter', 'selectAmbassador()' %>
      <% end %>
    </div>
  <% end %>
