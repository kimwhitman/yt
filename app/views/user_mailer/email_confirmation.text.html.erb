<html>
  <head>
    <title><%= @title %></title>
  </head>
  <body>
    <div class="container">
      <%= render :partial => '/shared/email_header' %>
      <div id="main">

        <p>Welcome to the Yoga Today Community!</p>

        <p>To confirm your account, please click on the following url:</p>

        <%= new_user_confirmation_url(
              :user_id => @user,
              :token   => @user.confirmation_token,
              :encode  => false,
              :membership => @membership) %>

        <p>If you have any questions about or problems with the service,<br />
        please don't hesitate to email <%= AppConfig['from_email'] %>.</p>
      </div>
      <%= render :partial => 'footer', :locals => {:follow => true} %>
    </div>
  </body>
</html>