<div class="disclaimer" id="footer">

  <% if defined?(follow) && follow %>
  <p>To follow us online:</p>
  <%= link_to image_tag('emails/facebook.jpg', :alt => "YogaToday Facebook Page"), 'http://www.facebook.com/pages/Yoga-Today/37437463401', :title => 'YogaToday Facebook Page' %>
  <%= link_to image_tag('emails/twitter.jpg', :alt => "Twitter"), "http://twitter.com/yogatoday", :title => 'YogaToday Twitter Account' %>
  <%= link_to image_tag('emails/rss.jpg', :alt => "RSS"), "http://blog.yogatoday.com", :title => 'YogaToday Blog' %>
  <% end %>

  <% if defined?(tos) && tos %>
  <p>For details about the Yoga Today Terms of Service, visit <br/>
    <%= link_to terms_and_conditions_url, terms_and_conditions_url %><br/>
  </p>
  <% end %>

