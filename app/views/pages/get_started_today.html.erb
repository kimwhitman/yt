          </ul>
          <%= link_to_function(image_tag('getstarted_download_showdetails.png', :alt => 'Show Details', :class => 'getstarted_details'), "togglePopup(this, 'download')", {:class => 'toggle_link', :title => 'Show Details'}) -%>
